<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:text="WED"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:id="@+id/wedButton"
        android:layout_alignBaseline="@+id/tueButton"
        android:layout_alignBottom="@+id/tueButton"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="TUE"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:id="@+id/tueButton"
        android:layout_alignBaseline="@+id/monButton"
        android:layout_alignBottom="@+id/monButton"
        android:layout_toLeftOf="@+id/wedButton"
        android:layout_toStartOf="@+id/wedButton"
        android:layout_marginRight="10dp"
        android:layout_marginEnd="10dp"
        android:fontFamily="sans-serif-medium" />

    <Button
        android:text="THURS"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:id="@+id/thursButton"
        android:layout_alignBaseline="@+id/wedButton"
        android:layout_alignBottom="@+id/wedButton"
        android:layout_toRightOf="@+id/wedButton"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:fontFamily="sans-serif-medium" />

    <Button
        android:text="FRI"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:id="@+id/friButton"
        android:layout_alignBaseline="@+id/thursButton"
        android:layout_alignBottom="@+id/thursButton"
        android:layout_toRightOf="@+id/thursButton"
        android:layout_toEndOf="@+id/thursButton"
        android:layout_marginLeft="9dp"
        android:layout_marginStart="9dp" />

    <Button
        android:text="MON"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:id="@+id/monButton"
        android:layout_marginLeft="14dp"
        android:layout_marginStart="14dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/monfrisched"
        android:id="@+id/scheduleImage"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="40dp" />

</RelativeLayout>